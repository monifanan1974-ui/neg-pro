{
  "version": "v1",
  "rules": [
    {
      "rule_id": "R001_anchor_with_proof",
      "title": "Anchoring with proof",
      "family": "opening",
      "conditions": {
        "deal_type":        { "in": ["salary_negotiation", "vendor_pricing"], "weight": 0.3 },
        "counterpart_style.decision_making": { "in": ["analytical", "deliberate"], "weight": 0.4 },
        "anchor_target.target_salary": { "status": "defined", "weight": 0.3 }
      },
      "activation_threshold": 0.62,
      "output_tactics": ["data_driven_anchor", "proof_stacking", "logical_progression"],
      "reasoning": "Analytical counterparts respond well to evidence-backed positions."
    },

    {
      "rule_id": "R002_emotion_first",
      "title": "Relationship-first opening",
      "family": "opening",
      "conditions": {
        "counterpart_style.communication": { "in": ["emotional", "expressive"], "weight": 0.5 },
        "cultural_context.communication_style": { "in": ["high_context"], "weight": 0.3 },
        "deadline_pressure.urgency_level": { "in": ["low", "medium", null], "weight": 0.2 }
      },
      "activation_threshold": 0.6,
      "output_tactics": ["rapport_building", "shared_goals_framing", "win_win_emphasis"],
      "reasoning": "Emotional communicators and high-context settings reward relationship priming."
    },

    {
      "rule_id": "R003_pressure_quick_framework",
      "title": "Quick decision framework",
      "family": "pressure",
      "conditions": {
        "deadline_pressure.urgency_level": { "in": ["high", "critical"], "weight": 0.6 },
        "batna_strength": { "in": ["solid_alternatives", "strong_alternatives"], "weight": 0.4 }
      },
      "activation_threshold": 0.68,
      "output_tactics": ["time_constraint_ack", "structured_options", "decision_matrix", "walk_away_hint"],
      "reasoning": "With time pressure and solid BATNA, use structured and firm approach."
    },

    {
      "rule_id": "R004_confidence_support",
      "title": "Confidence-building opener",
      "family": "support",
      "conditions": {
        "anchor_target.target_salary": { "status": "defined", "weight": 0.3 },
        "deadline_pressure.time_to_decision": { "range": [0, 30], "weight": 0.2 },
        "counterpart_style.communication": { "in": ["direct","analytical","amiable","expressive"], "weight": 0.2 },
        "deal_type": { "in": ["salary_negotiation"], "weight": 0.3 }
      },
      "activation_threshold": 0.6,
      "output_tactics": ["gentle_opener", "value_reminder", "positive_framing"],
      "reasoning": "Provide steady openings when user confidence is not dominant."
    }
  ]
}
